<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hospital_paciente_form" model="ir.ui.view">
        <field name="name">hospital.paciente.form</field>
        <field name="model">hospital.paciente</field>
        <field name="arch" type="xml">
            <form string="Paciente">
                <header>
                    <button name="action_set_borrador" string="Borrador"  type="object" class="oe_highlight" invisible="estado == 'borrador'"/>
                    <button name="action_set_alta" string="Alta"  type="object" class="oe_highlight" invisible="estado == 'alta'"/>
                    <button name="action_set_baja" string="Baja"  type="object" class="oe_highlight" invisible="estado == 'baja'"/>
                    <field name="estado" widget="statusbar"  statusbar_visible="borrador,alta,baja" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="secuencia" readonly="1"/>
                            <field name="nombre_apellido"/>
                            <field name="rnc"/>
                        </group>
                        <group>
                            <field name="fecha_hora_alta"/>
                            <field name="fecha_hora_actualizacion" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="tratamiento_ids" widget="many2many_tags" 
                               options="{'no_create': True}"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_hospital_paciente_tree" model="ir.ui.view">
        <field name="name">hospital.paciente.list</field>
        <field name="model">hospital.paciente</field>
        <field name="arch" type="xml">
            <list string="Pacientes">
                <field name="secuencia"/>
                <field name="nombre_apellido"/>
                <field name="rnc"/>
                <field name="estado" widget="badge"  decoration-info="estado == 'borrador'" decoration-success="estado == 'alta'" decoration-danger="estado == 'baja'"/>
            </list>
        </field>
    </record>

    <record id="view_hospital_paciente_search" model="ir.ui.view">
        <field name="name">hospital.paciente.search</field>
        <field name="model">hospital.paciente</field>
        <field name="arch" type="xml">
            <search string="Buscar Pacientes">
                <field name="secuencia"/>
                <field name="nombre_apellido"/>
                <field name="rnc"/>
                <filter string="Borrador" name="borrador" domain="[('estado','=','borrador')]"/>
                <filter string="Alta" name="alta" domain="[('estado','=','alta')]"/>
                <filter string="Baja" name="baja" domain="[('estado','=','baja')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_estado" context="{'group_by':'estado'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hospital_paciente" model="ir.actions.act_window">
        <field name="name">Pacientes</field>
        <field name="res_model">hospital.paciente</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo paciente
            </p>
        </field>
    </record>
</odoo>